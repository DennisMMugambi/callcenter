<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.s.callcenter">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.VerificationActivity"></activity>
        <activity android:name=".Activities.SignUpActivity" />
        <activity android:name=".Activities.PhoneVerificationActivity" />
        <activity android:name=".Activities.PhoneSignInActivity" />
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.ForgotPassActivity" />
        <activity android:name=".Activities.SplashScreenActivity"
            android:theme="@style/SplashTheme"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.CallCenterActivity"
            android:theme="@style/AppTheme2"/>

        <service android:name=".Services.NotificationService"
            android:icon="@drawable/ic_person_pin"
            android:label="@string/app_name"
            android:launchMode="singleTop"/>

    </application>

</manifest>